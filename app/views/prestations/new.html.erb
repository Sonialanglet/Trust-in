
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),url(<%= image_path 'pied.jpg' %>);">
  <div class="container">
    <div class="content">
      <div class="row">
        <h2>Proposez vos services </h2>
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <div class="form-prestation">
            <% if current_user %>
              <%= simple_form_for @prestation do |f| %>

                  <div class="form-group">
                    <label class="control-label check_boxes optional">Services que vous souhaitez proposer </label>
                    <input type="hidden" name="prestation[service_ids][]" value="">
                    <div class="service-choices">
                      <% Service.all.each do |service| %>
                        <input class="check_boxes optional" type="hidden" value="<%= service.id %>" name="prestation[service_ids][]" id="prestation_service_ids_<%= service.id %>">
                        <label class="service-choice" for="prestation_service_ids_<%= service.id %>">
                          <%= service.name %>
                          <i class="fa fa-check"></i>
                        </label>
                      <% end %>
                     </div>
                  </div>
                  <div class="text-presentation">
                    <%= f.input :description, placeholder: "Décrivez-vous" %>
                  </div>
                  <%= f.input :price, placeholder: "8€/h" %>

                <%= f.submit "valider", class: "btn-form"%>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
