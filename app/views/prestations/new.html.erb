
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),url(<%= image_path 'pied.jpg' %>);">
  <div class="container">
    <div class="content">
      <div class="row">
        <h2>Proposez vos services </h2>
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="card-form">
            <% if current_user %>
              <%= simple_form_for @prestation do |f| %>
               <%= f.association :category, collection: Category.all.order('name ASC') %>
                <%= f.input :price, placeholder: "8€/h" %>
                <%= f.input :description, placeholder: "Décrivez votre expérience" %>
                <%= f.submit "valider", class: "btn-new-prestation"%>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



