         <% end %>
      </div>

      <div id="bouton" onclick="show_hide_div('header');" class="cat btn">
        <%= link_to edit_profile_path(current_user.profile) do %>
         <%= image_tag "PETSITTINGTEXT4.jpg", class:"image-cat" %>
         <% end %>
      </div>



        <div id="bouton" onclick="show_hide_div('header');" class="cat btn">
          <%= link_to edit_profile_path(current_user.profile) do %>
           <%= image_tag "DIVERSTEXT4.jpg", class:"image-cat" %>
           <% end %>
