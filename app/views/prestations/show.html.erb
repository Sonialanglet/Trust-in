<% if @prestation.user.facebook_picture_url %>
  <% avatar_url = @prestation.user.facebook_picture_url %>
<% elsif @prestation.user.photo.present? %>
  <% avatar_url = cl_image_path(@prestation.user.photo, crop: :thumb, graviti: :face) %>
<% else %>
  <% avatar_url = "profile_icon.png" %>
<% end %>

<!-- photos associees des prestations  -->
<% if @prestation.category.name=="Babysitting" %>
  <% image_tag category = "babysitting.jpg" %>
  <% elsif @prestation.category.name=="Soutien scolaire" %>
    <% image_tag category = "books.jpg" %>
    <% elsif @prestation.category.name=="Cours musique" %>
      <% image_tag category = "coursmusique.jpg" %>
      <% elsif @prestation.category.name=="Pet Sitting" %>
        <% image_tag category = "petsitting.jpg" %>
<% else %>
  <% image_tag category = "pied.jpg" %>
<% end %>


<div class='container'>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="profil">
        <div class="photo-show">
         <%= image_tag avatar_url, class: "photo", crop: :thumb %>
        </div>

        <p class="name-show"><%= @prestation.user.first_name%> <%= @prestation.user.last_name%> </p>
        <p class="name-show"><%= @prestation.user.town%> </p>
        <% if @prestation.user.date_of_birth %>
         <p class="name-show"><%= (Date.today.year)-(@prestation.user.date_of_birth.year)%> ans
        </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="services">
        <h2> Services Proposés : </h2>
        <div class="img-services">
         <%= image_tag category, class: "photoservice" %>
        </div>
        <div class="price-services">
        <p>  <%= @prestation.price %> </p>
        </div>
      </div>
    </div>
  </div>



   </script>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="services">
        <h2> Recommandé par : </h2>
        <div class="img-recos">
         <%= image_tag "profile_icon.png", class: "photo-small" %>

        </div>
        <div>
          <p>Recommandez-vous cette prestation ?  <%= image_tag 'like.png', class:"star0" %></p>
         </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="description-prestation">
        <h2> Présentation : </h2>
        <p> <%=  @prestation.description %> </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="description-prestation">
        <p> <%=  @prestation.user.description %> </p>
      </div>
    </div>

  </div>
            <% if policy(@prestation).destroy? %>
              <% if current_user == @prestation.user %>
                <%= link_to prestation_path(@prestation),
                      method: :delete,
                      data: { confirm: "Are you sure?" } do %>
                  <p class="cancel-btn">Supprimer</p>
              <% end %>
              <% end %>
            <% end %>

            <%= render 'reviews/form', prestation: @prestation, review: @review %>


</div>


