<% if current_user.present? %>
<% if current_user.admin == true %>

    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 ">
        <div class="form-post">
          <%= simple_form_for @event, :html => {:multipart => true} do |form| %>
            <div class="form-group ">
             <p> <%= form.input :name, as: :text, label:"nom de l'activité" %> </p>
             <p> <%= form.input :photo, label:"Joindre une photo"%> </p>
             <p> <%= form.input :teaser, as: :text, label:"phrase d'accroche" %> </p>
             <p> <%= form.input :resume, as: :text, label:"résumé de l'activité" %> </p>
             <p> <%= form.input :description, as: :text, label:"description de l'activité" %> </p>
             <p> <%= form.input :date, as: :datetime, label:"date de l'activité" %> </p>
             <p> <%= form.input :price_cents, as: :text, label:"prix de l'activité" %> </p>
             <p> <%= form.input :number_of_participants, as: :integer, label:"nombre de participants" %> </p>


            </div>
             <%= form.submit "poster", class: "btn btn-post" %>
            <% end %>
        </div>
      </div>
    </div>

<% end %>
<% end %>



