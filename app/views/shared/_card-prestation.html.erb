<% if prestation.user.facebook_picture_url %>
  <% avatar_url = prestation.user.facebook_picture_url %>
<% elsif prestation.user.photo.present? %>
  <% avatar_url = cl_image_path(prestation.user.photo, crop: :fill) %>
<% else %>
  <% avatar_url = "profile_icon.png" %>
<% end %>

<!-- si logo des prestations  -->
<% if prestation.category.name=="Babysitting" %>
  <% image_path category = "babysitting.jpg" %>
  <% elsif prestation.category.name=="Soutien scolaire" %>
    <% image_path category = "books.jpg" %>
    <% elsif prestation.category.name=="Cours musique" %>
      <% image_path category = "coursmusique.jpg" %>
      <% elsif prestation.category.name=="Pet Sitting" %>
        <% image_path category = "petsitting.jpg" %>
<% else %>
  <% image_path category = "pied.jpg" %>
<% end %>

<div class="card-prestations-index">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path category%>');">
    <div class="card-category">  <%= prestation.category.name%> </div>
    <div class="card-description">
    </div>
    <%= image_tag avatar_url, crop: :fill, class:'card-user' %>
    <%= link_to '', prestation_path(prestation), class:'card-link' %>
  </div>
  <div class = "card-footer">
    <div class="info-prestataire">
      <p ><strong> <%= prestation.user.first_name.upcase%> </strong> </p>
      <% if prestation.user.date_of_birth %>
        <p> <%= Date.today.year-prestation.user.date_of_birth.year%> ans</p>
      <% end %>
      <p> <%= prestation.user.town%> </p>
    </div>
    <div class="recos-prestataire">

        <div class="recomand">
          <% if prestation.recomands.count > 0 %>
          <%= image_tag "star.png", class:'star-recomand' %>
          <% else %>
          <%= image_tag "star0.png", class:'star-recomand' %>
          <% end %>
          <p> <%= pluralize(prestation.recomands.count, 'reco')%> par votre réseau </p>
        </div>
          <div class="recommandez-ici">
          <p> Recommandez-vous également ? <%= link_to recomandation_prestation_path(prestation), method: :post,
          data: { confirm: "Votre recommandation a été prise en compte !" }  do %>
            <div class="recomand-btn">
              <i class="fa fa-thumbs-up"> </i>
            </div>
            <% end %>

      </p>
          </div>
    </div>
  </div>
  </div>



