<h1>Achat de l'activité <%= @participation.event_ref %></h1>
<%= form_tag participation_charges_path(@participation) do %>
  <article>
     <label class="amount">
       <span>Montant: <%= @participation.amount_cents%> euros</span>
     </label>
   </article>


  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Mon évènement"
    data-email="<%= current_user.email %>"
    data-description="<%= @participation.event_ref %>"
    data-amount="<%= @participation.amount_cents * 100 %>"
    data-currency="eur"></script>


<% end %>

