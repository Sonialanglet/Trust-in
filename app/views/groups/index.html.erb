
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-groups">
      <h3>Aggrandissez votre reseau pour vous simplifier votre quotidien </h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="subtitle-groups">
        <div class="img-network">
          <%= image_tag 'share.png' %>
        </div>
        <div class="text-network">
          <p> Partagez vos recommandations sur vos prestataires de confiance  </p>
          <p> ... et bénéficiez à votre tour des recommandations de votre réseau </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
     <p> liste des personnes qui on demandé à rejoindre votre carnet </p>
     <% @principal_group = current_user.groups.find do |group| %>
       <% group.category == 'principal'  %>
         <% end %>

     <p>  <% @principal_group.group_users.each do |group_user| %> </p>
    <% unless group_user.user == current_user %>

     <% unless group_user.status == 'accepted'%>
     <ul>
       <li>
         <%= group_user.user.first_name  %>
     <%= link_to accept_join_group_path (group_user) do%>
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        <% end %>

         </li>
     </ul>
     <% end %>
     <% end %>

     <% end %>

  </div>


  <div class="row">
    <div class="groups-list">
    <h3>    <i class="fa fa-sign-in" aria-hidden="true"></i>  Demander à rejoindre leur carnet de contacts</h3>
      <p> <strong> pour accéder à leurs recommandations </strong></p>
      <% @groups.each do |group| %>
      <div class="col-xs-12 col-md-6 col-md-offset-3">

        <div class="one-group">
          <ul>
            <li>
              <div class="one-to-add">
                <div class="name-to-add">
                 <p>  <%= group.founder.first_name %> <%= group.founder.last_name.upcase %> </p>
                 </div>
                <div class="circle-icon-add">
                   <%= link_to want_join_group_path (group) do %>
                  <i class="fa fa-sign-in" aria-hidden="true"></i>
                  <% end %>
                </div>

              </div>
          </li>
          </ul>
        </div>
      </div>

        <% end %>
    </div>
  </div>

  <div class="row">
    <div class="groups-list">
    <h3>    <i class="fa fa-user-plus" aria-hidden="true"></i>  Ajoutez à votre carnet de contacts</h3>
    <p> <strong> pour partager vos recommandations </strong></p>
      <% @groups.each do |group| %>
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <% unless current_user.groups.first.users.include? group.founder%>
        <div class="one-group">
          <ul>
            <li>
              <div class="one-to-add">
                <div class="name-to-add">
                 <p>  <%= group.founder.first_name %> <%= group.founder.last_name.upcase %> </p>
                 </div>
                <div class="circle-icon-add">
               <%= link_to add_user_to_principal_group_path (group.founder) do%>
                  <i class="fa fa-user-plus" aria-hidden="true"></i>
                  <% end %>
                </div>

              </div>
          </li>
          </ul>
        </div>
        <% end %>
    </div>
       <% end %>
    </div>
  </div>





  <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="groups-list">
      <h3> <i class="fa fa-address-book" aria-hidden="true"></i>  Vos contacts actuels</h3>

      <% current_user.groups.each do |group| %>
        <%group.users.each do |contact| %>
        <div class="current_contacts">
        <p>  <%= contact.first_name %> <%= contact.last_name %> </p>
                <%= link_to remove_user_from_principal_group_path(contact),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do%>
                   <i class="fa fa-trash" aria-hidden="true"></i>
                   <% end %>

        <% end %>
        <% end %>
        </div>
        </div>
      </div>

      </div>
  </div>





  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class = "search-form-groups">
        <h3> <i class="fa fa-search-plus" aria-hidden="true"></i>  Rechercher une personne </h3>


      <%= form_tag groups_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "rechercher par nom de famille"
        %>
      <% end %>
      </div>

    </div>
  </div>
</div>
