<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="rappel-connexion">

      <h2> <i class="fas fa-info-circle"></i> Vous devez être connecté pour accéder à cette rubrique</h2>
    </div>

      <div class="form-login-new">
    <h2>------ Pas encore inscrit ? ------ </h2>
        <div class="facebook-connect">
          <%- if devise_mapping.omniauthable? %>
              <div class="btn btn-facebook">
                <%= link_to "S'inscrire avec Facebook",  user_facebook_omniauth_authorize_path  %>
              </div>



          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) %><br />
          <% end -%>



          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class="btn btn-creer">
            <%= link_to "Créer votre compte", new_registration_path(resource_name), class: "link-text" %><br />
            </div>
          <% end -%>


          <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
          <% end -%>

          <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
          <% end -%>
          <% end -%>
        </div>

        <h2>-------- Déjà inscrit ? -------- </h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-green" %>
        <% end %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Oublié votre mot de passe?", new_password_path(resource_name), class: "link-text" %><br />
          <% end -%>
          </div>

      </div>

    </div>
  </div>
</div>


