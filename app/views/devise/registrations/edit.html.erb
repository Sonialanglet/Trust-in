
<div>
<h2> Veuillez compléter vos informations, <%= current_user.first_name.to_s.humanize %> </h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class="form-inputs">
      <%= f.input :first_name, label: "Prénom", autofocus: true%>
      <%= f.input :last_name, label: "Nom",required: false %>
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :date_of_birth, label: "Date de naissance",autofocus: true, placeholder: "01/02/2000", required: true %>
      <%= f.input :town, label: "Ville",autofocus: true, placeholder: "Boulogne", required: false, hint: "*:ville d'habitation" %>
      <%= f.input :address, label: "Adresse",autofocus: true, placeholder: "1 route de la Reine", required: false %>
      <%= f.input :school1, label: "Etablissement scolaire actuel",autofocus: true, placeholder: "Notre Dame de Boulogne" , required: false%>
      <%= f.input :school2, label: "Précédent établissement",autofocus: true, placeholder: "SFA" , required: false%>
      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Oublié votre mot de passe?", new_password_path(resource_name), class: "link-text" %><br />
</div>

<%= link_to "Back", :back %>



<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
