
<div class="container">
  <div class="content">
    <div class="row">
      <h2>Veuillez compléter vos informations </h2>
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="card-form">
          <% if current_user %>
          <%= simple_form_for(@profile, as: current_user, url: edit_profile_path(@current_user), html: { method: :update }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">

              <%= f.input :first_name, label: "Prénom", autofocus: true%>
              <%= f.input :last_name, label: "Nom",required: false %>
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.input :town, label: "Ville",autofocus: true, placeholder: "Boulogne", required: false, hint: "*:ville d'habitation" %>
              <%= f.input :school1, label: "Ecole fréquentée",autofocus: true, placeholder: "SFA" , required: false, hint: "*:l'école où est scolarisé votre enfant"%>
              <%= f.input :school2, label: "Ecole2 fréquentée",autofocus: true, placeholder: "Parchamps" , required: false, hint: "*:autre école possible si plusieurs enfants"%>
              <%= f.input :club1, label: "Club ou association",autofocus: true, placeholder: "TCBB" , required: false, hint: "*:club ou association sportive / artistique"%>
              <%= f.input :club2, label: "Autre club ou association",autofocus: true, placeholder: "conservatoire de musique", required: false %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update" %>
          </div>

            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<%= link_to "Oublié votre mot de passe?", new_password_path(current_user), class: "link-text" %><br />
</div>

<%= link_to "Back", :back %>


