<!-- photo de la personne qui s'incrit, avatar par defaut si pas de chargement photo -->
<!-- gestion de la photo via facebook ou bien via le formulaire d'inscription -->
<% if current_user.facebook_picture_url %>
  <% avatar_url = current_user.facebook_picture_url %>
<% elsif current_user.photo.present? %>
  <% avatar_url = cl_image_path(current_user.photo, width: 35, height: 35, crop: :thumb, graviti: :face) %>
<% else %>
  <% avatar_url = "profile_icon.png" %>
<% end %>


<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="profil">
      <div class="photo-show">
       <%= image_tag avatar_url, class: "photo", crop: :thumb %>
      </div>

      <p class="name-show"><%= current_user.first_name%> <%= current_user.last_name%> </p>
    </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="services">
      <h2> vos recommandations : </h2>
      <div class="img-recos">
       <%= image_tag "profile_icon.png", class: "photo-small" %>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="services">
      <h2> vos informations : </h2>
      <div class="img-recos infos">
        <p class="name-show"> Lieu d'habitation : <%= current_user.town%> </p>
        <p class="name-show"> Ecole(s) fréquentées : <%= current_user.school1%>, <%= current_user.school2%> </p>
        <p class="name-show"> Club et associations : <%= current_user.club1%>, <%= current_user.club2%> </p>

        <div class="circle-icon-profile">
            <%= link_to edit_user_registration_path(current_user) do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
            <% end %>

        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="services">
      <h2> Les prestations que vous proposez: </h2>
      <div class="fiche-prestation">
       <ul>
         <% @prestations.each do |prestation|%>
           <li class="item-list" style="list-style-type: none";>
            <div class="name">
              <%= prestation.category.name%>
            </div>
            <div class="price">
              <%= prestation.price%>
            </div>
            <div class="circle-icon-edit">
                <%= link_to edit_prestation_path(current_user) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
            </div>
            <div class="circle-icon-delete">
              <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>
                '.html_safe, prestation_path(current_user),
                method: :delete,
                data: { confirm: 'are you sure?'},class: "btn btn-gray"%> </p>

            </div>
            <% end %>
            <% end %>

            </li>

       </ul>
      </div>

    </div>
       <div class="plus">
         <div class="circle-icon-plus">
           <%= link_to new_prestation_path(current_user) do %>
             <i class="fa fa-plus" aria-hidden="true"></i>
             <% end %>
          </div>
        </div>
  </div>
</div>


<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="services">
      <p>Vous souhaitez supprimer votre compte ? </p>
        <div class="circle-icon-profile">
        <p class="name"><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>
        '.html_safe, registration_path(current_user),
        method: :delete,
        data: { confirm: 'are you sure?'},class: "btn btn-gray"%> </p>
        </div>
    </div>

  </div>
</div>
