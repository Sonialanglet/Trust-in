<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<div class="container">
  <div class="content">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="card-form">

            <%= simple_form_for [@prestation, @review] do |f| %>
             <%= f.input :rating %>
              <%= f.input :comment, placeholder: "commentaires" %>
              <%= f.submit "valider", class: "btn-new-prestation"%>
            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
