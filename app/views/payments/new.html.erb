
<h1> Achat de l'activité  <%= @participation.event_ref %></h1>
<%= form_tag participation_payments_path(@participation) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@participation.amount) %></span>
    </label>
  </article>



  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Paiement de l'activité"
    data-email="<%= current_user.email %>"
    data-description="activité <%= @participation.event_ref %>"
    data-amount="<%= @participation.amount_cents %>"
    data-currency="eur"></script>


<% end %>


